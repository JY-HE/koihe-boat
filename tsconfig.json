{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "preserve",
        "strict": true,
        "target": "ES2015",
        "module": "ESNext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "lib": ["esnext", "dom"],
        "rootDirs": ["./"],
        "paths": {
            "@/*": ["packages/*"]
        }
    },
    "include": ["packages/**/*", "examples/src/main.ts"],
    "exclude": ["node_modules", "dist", "examples"]
}
